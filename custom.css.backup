/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #e50914;
    --secondary-color: #b20710;
    --accent-color: #ffd700;
    --dark-color: #000000;
    --darker-color: #000000;
    --card-bg: #181818;
    --card-hover: #2f2f2f;
    --text-color: #ffffff;
    --text-muted: #808080;
    --overlay: rgba(0, 0, 0, 0.7);
}

body {
    font-family: 'Poppins', sans-serif;
    color: var(--text-color);
    line-height: 1.6;
    overflow-x: hidden;
    background: var(--dark-color);
}

html {
    scroll-behavior: smooth;
}

a, a:active {
    text-decoration: none;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.section-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-color);
    position: relative;
    padding-bottom: 15px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 2px;
}

/* Navigation */
.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    transition: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0px 0px 20px 0px rgba(0, 217, 255, 0.1);
    border-bottom: 1px solid rgba(0, 217, 255, 0.1);
}

